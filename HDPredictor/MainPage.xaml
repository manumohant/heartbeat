<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HDPredictor.MainPage" >

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*">
            

            <StackLayout Orientation="Horizontal" Grid.Row="0" Margin="10"> 
                <Picker x:Name="devicePicker" WidthRequest="300"
                    ItemsSource="{Binding devices}" ItemDisplayBinding="{Binding Name}"
                    SelectedIndexChanged="OptionsPicker_SelectedIndexChanged" />
                <Button 
                Text="Connect"  
                Clicked="OnConnectClicked"
                HorizontalOptions="Fill" />     

            </StackLayout>
            <StackLayout Margin="10" Grid.Row="1">
                <!-- Email Entry -->
                <Entry Placeholder="Email" Keyboard="Email" x:Name="EmailEntry" />

                <!-- Name Entry -->
                <Entry Placeholder="Name" x:Name="NameEntry" />

                <!-- Age Entry -->
                <Entry Placeholder="Age" Keyboard="Numeric" x:Name="AgeEntry" />

                <!-- Gender Picker -->
                <Picker Title="Gender" x:Name="GenderPicker">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Male</x:String>
                            <x:String>Female</x:String>
                            <x:String>Other</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <!-- Height Entry -->
                <Entry Placeholder="Height (cm)" Keyboard="Numeric" x:Name="HeightEntry" />

                <!-- Weight Entry -->
                <Entry Placeholder="Weight (kg)" Keyboard="Numeric" x:Name="WeightEntry" />
                
                <!-- Heartbeat Entry -->
                <Entry Placeholder="Heart Beats" Keyboard="Numeric" x:Name="HeartBeatEntry" />

                <!-- Submit Button -->
                <Button Text="Submit" Clicked="Submit_Clicked" />

                <Label x:Name="result" Text="Result: ____________________" Padding="0,20,0,0"></Label>
            </StackLayout>
            <ScrollView MaximumHeightRequest="200" Margin="10" VerticalOptions="End" HorizontalOptions="End" Grid.Row="2">
                <Label Text="" x:Name="logs" VerticalOptions="End" />
            </ScrollView>



        </Grid>
    </ScrollView>

</ContentPage>
